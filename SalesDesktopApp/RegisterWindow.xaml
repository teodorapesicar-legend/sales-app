<Window x:Class="SalesDesktopApp.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New user Sign in" Height="550" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="New User Sign In" 
                   FontSize="18" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="20"/>

        <StackPanel Grid.Row="1" Margin="40,10">
            <TextBlock Text="Username:" Margin="0,10,0,5"/>
            <TextBox x:Name="UsernameTextBox" Height="30"/>

            <TextBlock Text="Password:" Margin="0,10,0,5"/>
            <PasswordBox x:Name="PasswordBox" Height="30"/>

            <TextBlock Text="Name:" Margin="0,10,0,5"/>
            <TextBox x:Name="FirstNameTextBox" Height="30"/>

            <TextBlock Text="Last Name:" Margin="0,10,0,5"/>
            <TextBox x:Name="LastNameTextBox" Height="30"/>

            <TextBlock Text="Role:" Margin="0,10,0,5"/>
            <ComboBox x:Name="RoleComboBox" Height="30">
                <ComboBoxItem Content="Employee" Tag="1"/>
                <ComboBoxItem Content="Owner" Tag="2"/>
                <ComboBoxItem Content="Manager" Tag="3"/>
            </ComboBox>

            <TextBlock x:Name="ErrorTextBlock" Foreground="Red" 
                       Margin="0,10" TextWrapping="Wrap"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="20">
            <Button Content="Sign In" Width="120" Height="35" 
                    Margin="10" Click="RegisterButton_Click"/>
            <Button Content="Cancel" Width="120" Height="35" 
                    Margin="10" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>